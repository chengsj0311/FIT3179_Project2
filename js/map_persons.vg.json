{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": [
      "Calculated Annual Growth Rate (CAGR) of Number of Persons Engaged from 2015 to 2022 by State"
    ],
    "fontSize": 18,
    "fontWeight": "bold",
    "font": "open sans",
    "anchor": "start"
  },
  "width": 830,
  "height": 400,
  "params": [
    {
      "name": "zoom_level",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 10000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        109.5,
        2.5
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            109.5,
            2.5
          ],
          [
            102.5,
            2.5
          ],
          [
            114.5,
            2.5
          ]
        ],
        "labels": [
          "Malaysia",
          "West Malaysia",
          "East Malaysia"
        ],
        "name": "Map Center: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    },
    "translate": [
      400,
      250
    ]
  },
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#aadaff",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/neighbour_country.json",
        "format": {
          "type": "topojson",
          "feature": "custom.geo"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "grey",
        "color": "#beb8b8",
        "opacity": 0.5,
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/malaysia_state.json",
        "format": {
          "type": "topojson",
          "feature": "malaysia.state"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/no_of_persons_engaged.csv"
            },
            "key": "State",
            "fields": [
              "CAGR",
              "No_of_Person_Engaged_2022",
              "No_of_Person_Engaged_2015"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#7c5d5d",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "CAGR",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              0,
              2,
              3,
              5
            ],
            "range": [
              "#ede0d4",
              "#e6ccb2",
              "#ddb892",
              "#b08968",
              "#7f5539"
            ]
          },
          "legend": {
            "title": "Calculated Annual Growth Rate",
            "orient": "bottom-right",
            "direction": "horizontal",
            "labelLimit": 500,
            "gradientLength": 200,
            "titleLimit": 300,
            "titleFontSize": 14
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "No_of_Person_Engaged_2022",
            "type": "quantitative",
            "title": "Number of Person Engeged in 2022"
          },
          {
            "field": "No_of_Person_Engaged_2015",
            "type": "quantitative",
            "title": "Number of Person Engeged in 2015"
          },
          {
            "field": "CAGR",
            "type": "quantitative",
            "title": "Calculated Annual Growth Rate"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}