{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": [
            "Calculated Annual Growth Rate (CAGR) of Number of Establishments from 2015 to 2022 by State"
        ],
        "fontSize": 16,
        "fontWeight": "bold",
        "font": "open sans",
        "anchor": "start"
    },
    "width": 830,
    "height": 400,
    "params": [
        {
            "name": "zoom_level",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 10000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [
                109.5,
                2.5
            ],
            "bind": {
                "input": "select",
                "options": [
                    [
                        109.5,
                        2.5
                    ],
                    [
                        102.5,
                        2.5
                    ],
                    [
                        114.5,
                        2.5
                    ]
                ],
                "labels": [
                    "Malaysia",
                    "West Malaysia",
                    "East Malaysia"
                ],
                "name": "Map Center: "
            }
        }
    ],
    "projection": {
        "type": "mercator",
        "center": {
            "expr": "center_to"
        },
        "scale": {
            "expr": "zoom_level"
        },
        "translate": [
            400,
            250
        ]
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#aadaff",
                "opacity": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/neighbour_country.json",
                "format": {
                    "type": "topojson",
                    "feature": "custom.geo"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "grey",
                "color": "#beb8b8",
                "opacity": 0.5,
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/malaysia_state.json",
                "format": {
                    "type": "topojson",
                    "feature": "malaysia.state"
                }
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/chengsj0311/FIT3179_Project2/refs/heads/main/data/no_of_establishments.csv"
                        },
                        "key": "State",
                        "fields": [
                            "CAGR_Percentage",
                            "Establishments_2022",
                            "Establishments_2015"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#7c5d5d",
                "strokeWidth": 1
            },
            "encoding": {
                "color": {
                    "field": "CAGR_Percentage",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            -6,
                            -4,
                            -2,
                            0
                        ],
                        "range": [
                            "#ede0d4",
                            "#e6ccb2",
                            "#ddb892",
                            "#b08968",
                            "#7f5539"
                        ]
                    },
                    "legend": {
                        "title": "Calculated Annual Growth Rate",
                        "orient": "bottom-right",
                        "direction": "horizontal",
                        "labelLimit": 500,
                        "gradientLength": 200,
                        "titleLimit": 300,
                        "titleFontSize": 14
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Establishments_2022",
                        "type": "quantitative",
                        "title": "Establishments in 2022"
                    },
                    {
                        "field": "Establishments_2015",
                        "type": "quantitative",
                        "title": "Establishments in 2015"
                    },
                    {
                        "field": "CAGR_Percentage",
                        "type": "quantitative",
                        "title": "Calculated Annual Growth Rate (%)"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "x": 109.796783,
                        "y": 7.420404
                    }
                ]
            },
            "mark": {
                "type": "text",
                "text": "Due to the impact of COVID-19,\\nthe number of establishments\\ndecreased in 2022 compared to 2015.\\nHowever, the number of establishments\\nin Sabah continued to grow.",
                "lineBreak": "\\n",
                "align": "left",
                "color": "black"
            },
            "encoding": {
                "longitude": {
                    "field": "x",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "y",
                    "type": "quantitative"
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": null
        }
    }
}